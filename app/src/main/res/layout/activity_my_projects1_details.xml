<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.kartikgupta.projectify.MyProjects1Details">


    <TextView
        android:id="@+id/textView"
        android:layout_width="386dp"
        android:layout_height="109dp"
        android:background="@color/Indigo"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp" />

    <SearchView
        android:id="@+id/searchView"
        android:layout_width="320dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="@color/White"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="16dp" />

    <Button
        android:id="@+id/buttonProfile"
        android:layout_width="128dp"
        android:layout_height="40dp"
        android:background="@color/Indigo"
        android:text="Profile"
        android:textColor="@color/White"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/buttonMyProject"
        app:layout_constraintTop_toTopOf="@+id/buttonMyProject" />

    <Button
        android:id="@+id/buttonProject"
        android:layout_width="128dp"
        android:layout_height="40dp"
        android:background="@color/Indigo"
        android:text="Projects"
        android:textColor="@color/White"
        app:layout_constraintEnd_toStartOf="@+id/buttonMyProject"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/buttonMyProject" />

    <Button
        android:id="@+id/buttonMyProject"
        android:layout_width="128dp"
        android:layout_height="40dp"
        android:layout_marginTop="68dp"
        android:background="@color/Indigo"
        android:text="My Projects"
        android:textColor="@color/White"
        app:layout_constraintEnd_toStartOf="@+id/buttonProfile"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/buttonProject"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/imageButton2"
        android:layout_width="43dp"
        android:layout_height="40dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="16dp"
        android:background="@color/Indigo"
        android:src="@drawable/icon_post"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/textViewProjectName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Michigan Medicine"
        android:textColor="@color/Black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/buttonProject"
        tools:layout_editor_absoluteX="16dp" />

    <TextView
        android:id="@+id/textViewProjectCategory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Web"
        app:layout_constraintStart_toStartOf="@+id/textViewProjectName"
        app:layout_constraintTop_toBottomOf="@+id/textViewProjectName" />

    <TextView
        android:id="@+id/textViewDescriptionContent"
        android:layout_width="350dp"
        android:layout_height="146dp"
        android:gravity="top"
        android:text="Re-architected the content and information on the Drupal site. The Deploy module is designed to allow users to easily stage and preview content for a Drupal site. Deploy automatically manages dependencies between entities (like node references). It is designed to have a rich API which can be easily extended to be used in a variety of content staging situations.
"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewDescription" />

    <TextView
        android:id="@+id/textViewDescription"
        android:layout_width="wrap_content"
        android:layout_height="19dp"
        android:text="Description"
        android:textColor="@color/Black"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/textViewProjectCategory"
        app:layout_constraintTop_toBottomOf="@+id/textViewProjectCategory" />

    <TextView
        android:id="@+id/textViewRules"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Open Roles:"
        android:textColor="@color/Black"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/textViewDescriptionContent"
        app:layout_constraintTop_toBottomOf="@+id/textViewDescriptionContent" />

    <TextView
        android:id="@+id/textViewRoleDetail"
        android:layout_width="256dp"
        android:layout_height="21dp"
        android:layout_marginStart="8dp"
        android:text="Front-end Developer, HTML, CSS"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@+id/buttonRole"
        app:layout_constraintTop_toTopOf="@+id/buttonRole" />

    <Button
        android:id="@+id/button20"
        android:layout_width="75dp"
        android:layout_height="26dp"
        android:layout_marginStart="8dp"
        android:background="@color/White"
        android:text="See profile"
        android:textAllCaps="false"
        android:textColor="@color/Indigo"
        app:layout_constraintStart_toEndOf="@+id/textViewApplicantName"
        app:layout_constraintTop_toTopOf="@+id/textViewApplicantName" />

    <Button
        android:id="@+id/button21"
        android:layout_width="75dp"
        android:layout_height="26dp"
        android:layout_marginStart="8dp"
        android:background="@color/White"
        android:text="See profile"
        android:textAllCaps="false"
        android:textColor="@color/Indigo"
        app:layout_constraintStart_toEndOf="@+id/textView21"
        app:layout_constraintTop_toTopOf="@+id/textView21" />

    <Button
        android:id="@+id/buttonRole"
        android:layout_width="39dp"
        android:layout_height="21dp"
        android:layout_marginTop="8dp"
        android:background="@color/White"
        android:text="SWE"
        android:textAllCaps="false"
        android:textColor="@color/Indigo"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/textViewRules"
        app:layout_constraintTop_toBottomOf="@+id/textViewRules" />

    <TextView
        android:id="@+id/textViewApplicant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Applicants:"
        app:layout_constraintStart_toStartOf="@+id/buttonRole"
        app:layout_constraintTop_toBottomOf="@+id/buttonRole" />

    <TextView
        android:id="@+id/textViewApplicantName"
        android:layout_width="153dp"
        android:layout_height="23dp"
        android:layout_marginTop="8dp"
        android:gravity="center_vertical|fill_vertical"
        android:text=" Mary Jane"
        app:layout_constraintStart_toStartOf="@+id/textViewApplicant"
        app:layout_constraintTop_toBottomOf="@+id/textViewApplicant" />

    <TextView
        android:id="@+id/textView21"
        android:layout_width="154dp"
        android:layout_height="24dp"
        android:gravity="fill_vertical"
        android:text="Jack Morrison "
        app:layout_constraintStart_toStartOf="@+id/textViewApplicantName"
        tools:layout_editor_absoluteY="438dp" />

</android.support.constraint.ConstraintLayout>
